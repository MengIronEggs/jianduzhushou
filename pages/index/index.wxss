/* pages/index/index.wxss */
@import "../../styles/public.wxss";
.header{
  width: 100%;
  height: 80rpx;
  position: relative;
}
.searchInput{
  width: 95%;
  height: 70rpx;
  margin-left: 2%;
  margin-top: 3rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  font-size: 13px;
  padding-left: 1%;
  float: left;
}
.searchaContent{
  width:9%;
  margin-right: 2%;
  height: 70rpx;
  border-radius: 8rpx;
  position: absolute;
  right: 0;
  top: 10rpx;
}
.bgimg{
  width:70%;
  height: 70%;
  margin-top: 10%;
  margin-left: 10%;
}
.selector{
  width: 96%;
  height: 70rpx;
  margin-top: 5rpx;
  margin-left: 2%;
  border: 1px solid #ccc;
  border-radius: 5rpx;
}
.selector :first-child{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  overflow: hidden;
  font-size: 13px;
}
.picker{
  width: 100%;
  height: 100%;
  padding-left: 10px;
}
.topTab{
  width:96%;
  height: 70rpx;
  margin-left: 2%;
  border-radius: 5rpx;
  border:1px solid #ccc;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}
.tabItem{
  flex: 1;
  font-size: 13px;
  text-align: center;
  line-height: 70rpx;
}
.topTab view:nth-child(2){
  border-right: 1px solid #ccc;
  border-left: 1px solid #ccc;
}
.stateColor{
  color: #fff;
  background: #3f6695;
}